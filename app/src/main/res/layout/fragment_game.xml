<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/frame_question_board"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/cut_corners_background"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_ellipse"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frame_question_board"
        app:layout_constraintVertical_bias="0.2" />

    <View
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_ellipse_half"
        app:layout_constraintBottom_toBottomOf="@id/frame_question_board"
        app:layout_constraintEnd_toEndOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="@id/frame_question_board" />

    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_ellipse"
        app:layout_constraintEnd_toEndOf="@id/frame_question_board"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_ellipse_half"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@id/frame_question_board"
        app:layout_constraintStart_toStartOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/back_button"
        android:focusable="true"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="@id/frame_question_board"
        app:layout_constraintVertical_bias="0.2" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/frame_question_board"
        app:layout_constraintEnd_toEndOf="@+id/frame_question_board"
        app:layout_constraintStart_toStartOf="@+id/frame_question_board"
        app:layout_constraintTop_toBottomOf="@+id/frame_question_board"
        app:layout_constraintWidth_percent="0.9">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/count_correct_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:padding="5dp"
                android:text="@string/_00"
                android:textColor="#1F8435"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_question_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/correctProgressBar"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:max="100"
                app:indicatorColor="#1F8435"
                app:layout_constraintBottom_toBottomOf="@id/count_correct_tv"
                app:layout_constraintStart_toEndOf="@id/count_correct_tv"
                app:layout_constraintTop_toTopOf="@id/count_correct_tv"
                app:trackCornerRadius="10dp"
                app:trackThickness="10dp" />

            <TextView
                android:id="@+id/count_incorrect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:padding="5dp"
                android:text="@string/_00"
                android:textColor="#D05A03"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_question_number"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/inCorrectProgressBar"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:max="100"
                app:indicatorColor="#D05A03"
                app:indicatorDirectionLinear="leftToRight"
                app:layout_constraintBottom_toBottomOf="@id/count_incorrect_tv"
                app:layout_constraintEnd_toStartOf="@id/count_incorrect_tv"
                app:layout_constraintTop_toTopOf="@id/count_incorrect_tv"
                app:trackCornerRadius="10dp"
                app:trackThickness="10dp" />

            <TextView
                android:id="@+id/tv_question_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:maxLines="6"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question_number"
                tools:text="@tools:sample/lorem/random" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar_timer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:direction="counterclockwise"
        app:enableProgressAnimation="true"
        app:fillBackground="true"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:progressBackgroundColor="@color/white"
        app:progressCap="round"
        app:progressColor="@color/main" />


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/card"
        tools:ignore="UselessParent">

        <RadioButton
            android:id="@+id/rb_first"
            style="@style/CustomVariantRadioButton"
            tools:text="First questionasdaasda" />

        <RadioButton
            android:id="@+id/rb_second"
            style="@style/CustomVariantRadioButton"
            tools:text="81" />

        <RadioButton
            android:id="@+id/rb_third"
            style="@style/CustomVariantRadioButton"
            tools:text="First questionasdaasda" />

        <RadioButton
            android:id="@+id/rb_fourth"
            style="@style/CustomVariantRadioButton"
            tools:text="First questionasdaasda" />
    </RadioGroup>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/forward_button"
        android:focusable="true"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group" />

</androidx.constraintlayout.widget.ConstraintLayout>