<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/frame_question_board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/cut_corners_background"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_ellipse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frame_question_board" />

    <View
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_ellipse_half"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@id/frame_question_board"
        app:layout_constraintStart_toStartOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_ellipse_half"
        app:layout_constraintBottom_toBottomOf="@id/frame_question_board"
        app:layout_constraintEnd_toEndOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="@id/frame_question_board" />

    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_ellipse"
        app:layout_constraintEnd_toEndOf="@id/frame_question_board"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_circle"
        android:backgroundTint="@color/main"
        android:clickable="true"
        android:contentDescription="@string/profile"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/iv_score"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:contentDescription="@string/description_background_score"
        android:src="@drawable/background_score"
        app:layout_constraintBottom_toTopOf="@id/card_score_board"
        app:layout_constraintEnd_toEndOf="@id/frame_question_board"
        app:layout_constraintStart_toStartOf="@id/frame_question_board"
        app:layout_constraintTop_toTopOf="@id/frame_question_board"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/tv_score"
        style="@style/HomeScreenTextViewStyle"
        android:text="@string/your_score"
        android:textColor="@color/main"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_score"
        app:layout_constraintEnd_toEndOf="@id/iv_score"
        app:layout_constraintStart_toStartOf="@id/iv_score"
        app:layout_constraintTop_toTopOf="@id/iv_score"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_score_point"
        style="@style/HomeScreenTextViewStyle"
        android:textColor="@color/main"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_score"
        app:layout_constraintEnd_toEndOf="@id/iv_score"
        app:layout_constraintStart_toStartOf="@id/iv_score"
        app:layout_constraintTop_toBottomOf="@id/tv_score"
        app:layout_constraintVertical_bias="0"
        tools:text="99032pt" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_score_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_question_board"
        app:layout_constraintEnd_toEndOf="@+id/frame_question_board"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintStart_toStartOf="@+id/frame_question_board"
        app:layout_constraintTop_toBottomOf="@+id/frame_question_board"
        app:layout_constraintWidth_percent="0.92">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dot1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/main"
                android:contentDescription="@string/description_dot_image"
                app:layout_constraintBottom_toTopOf="@id/tv_complete"
                app:layout_constraintEnd_toStartOf="@id/tv_complete_percent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_complete_percent"
                app:shapeAppearanceOverlay="@style/CircleShapeableImageView" />

            <TextView
                android:id="@+id/tv_complete_percent"
                style="@style/HomeScreenTextViewStyle"
                android:textColor="@color/main"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/dot3"
                app:layout_constraintEnd_toStartOf="@id/guid1"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"
                tools:text="100%" />

            <TextView
                android:id="@+id/tv_complete"
                style="@style/HomeScreenTextViewStyle"
                android:text="@string/completion"
                app:layout_constraintStart_toStartOf="@id/tv_complete_percent"
                app:layout_constraintTop_toBottomOf="@id/tv_complete_percent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/main"
                android:contentDescription="@string/description_dot_image"
                app:layout_constraintBottom_toTopOf="@id/tv_total_question"
                app:layout_constraintEnd_toStartOf="@id/tv_question_count"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@id/guid1"
                app:layout_constraintTop_toTopOf="@id/tv_question_count"
                app:shapeAppearanceOverlay="@style/CircleShapeableImageView" />

            <TextView
                android:id="@+id/tv_question_count"
                style="@style/HomeScreenTextViewStyle"
                android:textColor="@color/main"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/dot4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@id/guid1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"
                tools:text="05" />

            <TextView
                android:id="@+id/tv_total_question"
                style="@style/HomeScreenTextViewStyle"
                android:text="@string/total_question"
                app:layout_constraintStart_toStartOf="@id/tv_question_count"
                app:layout_constraintTop_toBottomOf="@id/tv_question_count" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/forestGreen"
                android:contentDescription="@string/description_dot_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/dot1"
                app:layout_constraintTop_toBottomOf="@id/dot1"
                app:layout_constraintVertical_bias="0.5"
                app:shapeAppearanceOverlay="@style/CircleShapeableImageView" />

            <TextView
                android:id="@+id/tv_correct_count"
                style="@style/HomeScreenTextViewStyle"
                android:textColor="@color/forestGreen"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/dot3"
                app:layout_constraintEnd_toStartOf="@id/guid1"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@id/tv_complete_percent"
                app:layout_constraintTop_toTopOf="@id/dot3"
                tools:text="03" />

            <TextView
                android:id="@+id/tv_correct"
                style="@style/HomeScreenTextViewStyle"
                android:text="@string/correct"
                app:layout_constraintStart_toStartOf="@id/tv_correct_count"
                app:layout_constraintTop_toBottomOf="@id/tv_correct_count" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dot4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/tomato"
                android:contentDescription="@string/description_dot_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/dot2"
                app:layout_constraintTop_toBottomOf="@id/dot2"
                app:shapeAppearanceOverlay="@style/CircleShapeableImageView" />

            <TextView
                android:id="@+id/tv_wrong_count"
                style="@style/HomeScreenTextViewStyle"
                android:textColor="@color/tomato"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/dot4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@id/tv_question_count"
                app:layout_constraintTop_toTopOf="@id/dot4"
                tools:text="02" />

            <TextView
                android:id="@+id/tv_wrong"
                style="@style/HomeScreenTextViewStyle"
                android:text="@string/text_wrong"
                app:layout_constraintStart_toStartOf="@id/tv_wrong_count"
                app:layout_constraintTop_toBottomOf="@id/tv_wrong_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/btn_general"
        style="@style/HomeScreenButtonStyle"
        android:backgroundTint="@color/steelBlue"
        android:contentDescription="@string/general"
        android:src="@drawable/ic_general"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/card_score_board"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@id/card_score_board"
        app:layout_constraintTop_toBottomOf="@id/card_score_board"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/tv_general"
        style="@style/HomeScreenTextViewStyle"
        android:layout_marginTop="8dp"
        android:includeFontPadding="true"
        android:text="@string/general"
        app:layout_constraintEnd_toEndOf="@id/btn_general"
        app:layout_constraintStart_toStartOf="@id/btn_general"
        app:layout_constraintTop_toBottomOf="@id/btn_general" />

    <ImageButton
        android:id="@+id/btn_entertainment"
        style="@style/HomeScreenButtonStyle"
        android:backgroundTint="@color/lightBlue"
        android:contentDescription="@string/entertainment"
        android:src="@drawable/ic_entertainment"
        app:layout_constraintBottom_toBottomOf="@id/btn_science"
        app:layout_constraintEnd_toEndOf="@id/card_score_board"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@id/card_score_board"
        app:layout_constraintTop_toTopOf="@id/btn_science" />

    <TextView
        android:id="@+id/tv_entertainment"
        style="@style/HomeScreenTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="@string/entertainment"
        app:layout_constraintEnd_toEndOf="@id/btn_entertainment"
        app:layout_constraintStart_toStartOf="@id/btn_entertainment"
        app:layout_constraintTop_toBottomOf="@id/btn_entertainment" />


    <ImageButton
        android:id="@+id/btn_science"
        style="@style/HomeScreenButtonStyle"
        android:backgroundTint="@color/cornFlowerBlue"
        android:contentDescription="@string/science"
        android:src="@drawable/ic_science"
        app:layout_constraintBottom_toBottomOf="@id/btn_general"
        app:layout_constraintEnd_toStartOf="@id/btn_entertainment"
        app:layout_constraintStart_toEndOf="@id/btn_general"
        app:layout_constraintTop_toTopOf="@id/btn_general" />

    <TextView
        android:id="@+id/tv_science"
        style="@style/HomeScreenTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="@string/science"
        app:layout_constraintEnd_toEndOf="@id/btn_science"
        app:layout_constraintStart_toStartOf="@id/btn_science"
        app:layout_constraintTop_toBottomOf="@id/btn_science" />

    <ImageButton
        android:id="@+id/btn_leader_board"
        style="@style/HomeScreenButtonStyle"
        android:backgroundTint="@color/lightSeaGreen"
        android:contentDescription="@string/leaderboard"
        android:src="@drawable/ic_leaderboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_share_score"
        app:layout_constraintStart_toStartOf="@id/card_score_board"
        app:layout_constraintTop_toBottomOf="@id/tv_general"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_leader_board"
        style="@style/HomeScreenTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="@string/leaderboard"
        app:layout_constraintEnd_toEndOf="@id/btn_leader_board"
        app:layout_constraintStart_toStartOf="@id/btn_leader_board"
        app:layout_constraintTop_toBottomOf="@id/btn_leader_board" />

    <ImageButton
        android:id="@+id/btn_share_score"
        style="@style/HomeScreenButtonStyle"
        android:backgroundTint="@color/dimGray"
        android:contentDescription="@string/share_score"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@id/btn_leader_board"
        app:layout_constraintEnd_toEndOf="@id/card_score_board"
        app:layout_constraintStart_toEndOf="@id/btn_leader_board"
        app:layout_constraintTop_toTopOf="@id/btn_leader_board" />

    <TextView
        android:id="@+id/tv_share_score"
        style="@style/HomeScreenTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="@string/share_score"
        app:layout_constraintEnd_toEndOf="@id/btn_share_score"
        app:layout_constraintStart_toStartOf="@id/btn_share_score"
        app:layout_constraintTop_toBottomOf="@id/btn_share_score" />

</androidx.constraintlayout.widget.ConstraintLayout>